#include <stdio.h>
int main()
{
    int a, b;
    scanf("%d", &a);
    b=a*2-1;

    for(int i=0; i<a; i++){
        for(int j=i; j>0; j--){
            printf(" ");
        }
        for(int k=(b-i*2); k>0; k--){
            printf("*");
        }
        printf("\n");
    }
    for(int i=a-2; i>=0; i--){
        for(int j=i; j>0; j--){
            printf(" ");
        }
        for(int k=(b-2*i); k>0; k--){
            printf("*");
        }
        printf("\n");
    }
}
